let loggedIn = true;
let username;
let password;


do{
    username = window.prompt('Enter your name');
    password = window.prompt(`Enter your password`);

    if(username === "myUsername" && password === "myPassword"){
        loggedIn = true;
        console.log("You are logged in!");
    }
    else{
        console.log("Invaild credentials! Please try again");
    }
}while(loggedIn)
